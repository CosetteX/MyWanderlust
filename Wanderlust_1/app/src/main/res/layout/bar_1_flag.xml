<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bar_1_flag_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/theme_color"
        android:textColor="@color/text_white"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:text="Flag"/>

    <ScrollView
        android:id="@+id/bar_1_flag_scroll"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_below="@id/bar_1_flag_title"
        android:layout_above="@+id/disp_test_add">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bar_1_flag_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>


    <EditText
        android:text="Input Content"
        android:id="@+id/bar_1_flag_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bar_1_flag_add"/>


    <Button
        android:id="@+id/bar_1_flag_add"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add flag"/>




</RelativeLayout>
