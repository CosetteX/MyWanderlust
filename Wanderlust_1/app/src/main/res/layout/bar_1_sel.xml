<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <Button
        android:id="@+id/bar_1_flag_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/button_flag_sel"
        android:text="" />

    <TextView
        android:id="@+id/bar_1_txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="#87a7d6"
        android:textSize="20dp"
        android:text="I'm controller"/>

    <Spinner
        android:id="@+id/bar_1_spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/bar_1_btn"
            android:layout_height="60dp"
            android:textColor="@color/theme_color"
            android:textSize="18dp"
            android:text="确定" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:id="@+id/bar_1_choose_color"
            android:textColor="@color/theme_color"
            android:textSize="18dp"
            android:text="选择颜色"/>


    </LinearLayout>


</LinearLayout>